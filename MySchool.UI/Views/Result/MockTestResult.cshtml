
@model List<MySchool.Entities.QuestionAnswerEntities>
@{
    ViewBag.Title = "MockTestResult";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
@*<script src="~/Scripts/Question.js"></script>*@
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }


    /*///////////////////////////////////////////////////*/
    * {
        box-sizing: border-box;
    }

    .column {
        float: left;
    }
    /*///////////////////////////////////////////////////*/
</style>
<body style="background-image: url(../background/depart.jpg);
    background-size: cover;">

    @*@Html.Hidden("saveQuestion", @Url.Action("Add", "Question"))
        @Html.Hidden("loaddata", @Url.Action("LoadData", "Question"))
        @Html.Hidden("getQuestionByID", @Url.Action("GetQuestionByID", "Question"))*@

    <div class="row" style="height:2000px;">

        <div class="col-md-7 bac" style=" width: 100%;">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text m-t-lg">
                        <h2>
                            Test Results
                        </h2>
                        <table>
                            <tr>
                                <th>Questions</th>
                                <th>Right Answers</th>
                                <th>Your Answers</th>
                            </tr>

                            @foreach (MySchool.Entities.QuestionAnswerEntities item in Model)
                            {
                                <tr>
                                    <td>@Html.Raw(@item.QuestionText)</td>
                                    <td>@item.ChoiceText</td>
                                    <td>@item.UserAnswerText</td>
                                </tr>
                            }
                        </table>
                    </div>

                </div>

            </div>
            
        </div>

        <div class="col-md-8" style="width: 100%;">
            <div style="height:900px;">
                @*/////////////////////// class="table-responsive"///////////////////////////*@
                <div class="row">
                    <div class="col-lg-12">
                        <div class=" panel-default">
                            <div class="ibox float-e-margins">
                                <div class="ibox-content">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*/////////////////////// class="table-responsive"///////////////////////////*@
        </div>

    </div>
</body>

