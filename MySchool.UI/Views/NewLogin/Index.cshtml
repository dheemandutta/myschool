@model MySchool.Entities.UserRegistrationEntities

@*@{
            Layout = null;
    }*@

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@{
    ViewBag.Title = "Main";
}

<body style="background-image: url(../background/xxxxxxxxx.jpg);
    background-size: cover;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center m-t-lg">
                        <h1>
                            @ViewData["SubTitle"]
                        </h1>
                        <small>@ViewData["Message"]</small>

                    </div>
                </div>
            </div>


            <div class="col-lg-7" style="width: 113.333333%;">
                <div class="ibox float-e-margins" style="width: 108.333333%;">
                    <div class="ibox-content" style="width: 89.333333%;">
                        <div class="row" style="margin-left: 435px; margin-right: 212px;">
                            <div class="col-sm-6 b-r">

                            </div>

                            <div>
                                <div class="form-group">
                                    &nbsp;
                                </div>
                                <div class="form-group">
                                    &nbsp;
                                </div>
                                <div class="form-group">
                                    &nbsp;
                                </div>
                                <div class="form-group">
                                    &nbsp;
                                </div>
                            </div>

                            <div class="col-sm-6 b-r">
                                <form role="form">

                                    <h1>Log in</h1>

                                    <div class="form-group">
                                        <label>UserName</label> @Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(a => a.UserName)
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>  @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(a => a.Password)
                                    </div>

                                    <div class="form-group">
                                        <label> Year:</label>
                                        <div style="width: 112%;" required="required">
                                            <select name="account" class="form-control m-b" style="width:90%" id="BloodGroup">
                                                <option value="">Select</option>
                                                <option value="2019">2019</option>
                                                <option value="2020">2020</option>
                                                <option value="2021">2021</option>
                                                <option value="2022">2022</option>
                                                <option value="2023">2023</option>
                                            </select>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                    </div>

                                    <div>
                                        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Log in</strong></button>
                                        @*<label> <input type="checkbox" class="i-checks"> Remember me </label>*@
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }

</body>