                                                    <tr>
                                                        <td background-color:forestgreen; color: black;">01</td>
                                                        <td style="color: black;">02</td>
                                                        <td style="background-color:forestgreen; color: sandybrown;">03</td>
                                                        <td style="color: sandybrown;">04</td>
                                                        <td style="color: black;">05</td>
                                                        <td style="color: black;">06</td>
                                                        <td style="color: black;">07</td>
                                                        <td style="color: black;">08</td>
                                                        <td style="color: black;">09</td>
                                                        <td style="color: black;">10</td>
                                                    </tr>

                                                    <tr>
                                                        <td style="background-color:forestgreen; color: black;">01</td>
                                                        <td style="color: black;">02</td>
                                                        <td style="background-color:forestgreen; color: sandybrown;">03</td>
                                                        <td style="color: sandybrown;">04</td>
                                                        <td style="color: black;">05</td>
                                                        <td style="color: black;">06</td>
                                                        <td style="color: black;">07</td>
                                                        <td style="color: black;">08</td>
                                                        <td style="color: black;">09</td>
                                                        <td style="color: black;">10</td>
                                                    </tr>

                                                    <tr>
                                                    </tr>



                                                </table>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-lg">
                                <input type="submit" class="btn btn-warning" value="Previous" name="Command" />
                                <input type="submit" class="btn btn-success" value="Next" name="Command" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Styles {
