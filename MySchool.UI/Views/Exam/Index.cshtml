@model MySchool.Entities.ExamEntities
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/exam.js"></script>

<h3>
    Examination
</h3>
<body>
    @Html.Hidden("saveexam", @Url.Action("SaveOrUpdate", "Exam"))
    @Html.Hidden("deleteexam", @Url.Action("DeleteExam", "Exam"))
    @Html.Hidden("loadexamallpagewise", @Url.Action("LoadAllExamPageWise", "Exam"))
    @Html.Hidden("getexambyid", @Url.Action("GetExamByID", "Exam"))

    <!-- START panel-->
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal" id="MyForm" data-parsley-validate="" novalidate="" action="#">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Examination</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-sm-3">
                                <input type="text" placeholder="Exam Name" class="form-control" id="txtExam" required="required" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="hidden" id="ExamID" />
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button class="btn btn-default" id="btnCancel" onclick="ClearAll()">Clear</button>
                        <button class="btn btn-primary" id="btnSave" onclick="SaveOrUpdate();">Save changes</button>
                        @* <button type="submit" class="btn btn-primary" id="btnUpdate" onclick="Update();">Update</button>*@
                    </div>
                </div>

            </form>
        </div>
    </div>
    <!-- END panel-->
    <!-- ------------------------------------------------------  Data Table ------------------------------------------------------ -->
    <!-- ------------------------------------------------------  Data Table ------------------------------------------------------ -->
    <!-- ------------------------------------------------------  Data Table ------------------------------------------------------ -->
    <!-- ------------------------------------------------------  Data Table ------------------------------------------------------ -->

    <div class="container-fluid">
        <!-- START DATATABLE 1 -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <div class="table-responsive">
                            <table id="tblExam" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Exam</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END DATATABLE 1 -->
    </div>
</body>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
    @Styles.Render("~/bundles/SweetAlertCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
    @Scripts.Render("~/bundles/parsley")
    @Scripts.Render("~/bundles/SweetAlert")
}

<script type="text/javascript">
    $(document).ready(function () {
        SetUpGrid();
    });
</script>