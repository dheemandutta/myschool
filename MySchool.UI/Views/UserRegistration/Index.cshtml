@model MySchool.Entities.ExamEntities

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<body style="background-image: url(../background/depart.jpg);
    background-size: cover;">


    @*@Html.Hidden("saveTopic", @Url.Action("Add", "Topic"))
        @Html.Hidden("loaddata", @Url.Action("LoadData", "Topic"))
        @Html.Hidden("getTopicByID", @Url.Action("GetTopicByID", "Topic"))
        @Html.Hidden("deleteTopic", @Url.Action("DeleteTopic", "Topic"))*@


    <div class="row" style="height:2000px;" align="center">
        <div class="col-md-7 bac" style=" width: 100%;">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text m-t-lg">
                        <h2>
                            User Registration
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="" style="width: 50%;" align="center">

            <div style="height:900px;" align="center">
                @*/////////////////////// class="table-responsive"///////////////////////////*@
                <div class="card">
                    <div class="row">
                        <div class="col-lg-12" style="width: 100%;">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <div class="panel-title"><h4>  </h4></div>
                                </div>
                                <div class="ibox float-e-margins">
                                    <div class="ibox-content">
                                        <form class="form-horizontal" id="MyForm" data-parsley-validate="" novalidate="" action="#">

                                            <div class="form-group" style="margin-right: -600px;">
                                                <label class="col-sm-2 control-label">FirstName:<font color=""></font> </label>
                                                <div class="col-sm-10" style="width: 30%;">
                                                    <input type="text" class="form-control" style="width: 90%;" id="FirstName" placeholder="FirstName" required="required">
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-right: -600px;">
                                                <label class="col-sm-2 control-label">Last Name:<font color=""></font> </label>
                                                <div class="col-sm-10" style="width: 30%;">
                                                    <input type="text" class="form-control" style="width: 90%;" id="LastName" placeholder="Last Name" required="required">
                                                </div>
                                            </div>

                                            <div class="form-group" style="margin-right: -600px;">
                                                <label class="col-sm-2 control-label">Exam Name:<font color=""></font> </label>
                                                <div class="col-sm-10" style="width: 27%;">
                                                    @Html.DropDownListFor(model => model.ExamID, (IEnumerable<SelectListItem>)ViewBag.Exam, "Select", new { @class = "form-control", @id = "drpExam" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <input type="hidden" id="UserRegistrationID" />
                                            </div>

                                            <div class="panel-footer text-center">
                                                <button type="button" class="btn btn-primary" id="btnSave" onclick="return Add();">Save</button>
                                                <button type="button" class="btn btn-primary" id="btnClear" onclick="clearTextBox();">Clear</button>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        @*/////////////////////// class="table-responsive"///////////////////////////*@

    </div>
</body>