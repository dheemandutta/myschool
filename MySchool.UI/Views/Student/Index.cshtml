                                    <div role="tabpanel">
                                        <!-- Nav tabs-->
                                        <ul role="tablist" class="nav nav-tabs">
                                            <li role="presentation" class="active">
                                                <a href="#StudentParticulars" aria-controls="StudentParticulars" role="tab" data-toggle="tab">Student Particulars</a>
                                            </li>
                                            <li role="presentation">
                                                <a href="#StudentAttendent" aria-controls="StudentAttendent" role="tab" data-toggle="tab">Student Attendent</a>
