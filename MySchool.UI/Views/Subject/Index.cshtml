

@model MySchool.Entities.SubjectEntities

@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/subject.js"></script>

<h3>
    Subject
</h3>
<body>
        @Html.Hidden("saveorupdatesubject", @Url.Action("SaveOrUpdate", "Subject"))
    @*@Html.Hidden("deletegrade", @Url.Action("DeleteGrade", "Grade"))
        @Html.Hidden("loadgradeallpagewise", @Url.Action("LoadAllGradePageWise", "Grade"))
        @Html.Hidden("getgradebyid", @Url.Action("GetGradeByID", "Grade"))*@

    <!-- START panel-->
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal" id="MyForm" data-parsley-validate="" novalidate="" action="#">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Subject</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-sm-3">
                                <input type="text" placeholder="Subject" class="form-control" id="txtSubject" required="required" />
                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-group mb">
                    <label class="col-sm-2 control-label mb">Grade</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.ID, (IEnumerable<SelectListItem>)ViewBag.getAllGradeForDrp, "Select", new { @class = "chosen-select form-control", @multiple = "multiple", @id = "drpGrade" })
                    </div>
                </div>

                <div class="form-group">
                    <input type="hidden" id="subjectID" />
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button class="btn btn-default" id="btnCancel" onclick="ClearAll()">Clear</button>
                        @*<button class="btn btn-primary" id="btnSave" onclick="SaveOrUpdate();">Save changes</button>*@
                        <button class="btn btn-primary" id="btnSave">Save changes</button>
                        @* <button type="submit" class="btn btn-primary" id="btnUpdate" onclick="Update();">Update</button>*@
                    </div>
                </div>

            </form>
        </div>
    </div>
    <!-- END panel-->
    <!-- ------------------------------------------------------  Data Table ------------------------------------------------------ -->
    <!-- ------------------------------------------------------  Data Table ------------------------------------------------------ -->
    <!-- ------------------------------------------------------  Data Table ------------------------------------------------------ -->
    <!-- ------------------------------------------------------  Data Table ------------------------------------------------------ -->

    <div class="container-fluid">
        <!-- START DATATABLE 1 -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <div class="table-responsive">
                            <table id="tblGrade" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Grade Group</th>
                                        <th>Grade</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END DATATABLE 1 -->
    </div>
</body>



