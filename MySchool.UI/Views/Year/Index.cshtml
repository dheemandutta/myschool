@model MySchool.Entities.YearEntities
@{
    ViewBag.Title = "Index";
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/Year.js"></script>

<body style="background-image: url(../background/depart.jpg);
    background-size: cover;">


    @Html.Hidden("saveYear", @Url.Action("Add", "Year"))
    @Html.Hidden("loaddata", @Url.Action("LoadData", "Year"))

    <div class="row" style="height:1050px;">
        <div class="col-md-7 bac" style=" width: 100%;">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text m-t-lg">
                        <h2>
                            Year
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8" style="width: 100%;">

            <div style="height:900px;">
                @*/////////////////////// class="table-responsive"///////////////////////////*@
                <div class="card">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <div class="panel-title"><h4>Add Year</h4></div>
                                </div>
                                <div class="ibox float-e-margins">
                                    <div class="ibox-content">
                                        <form class="form-horizontal" id="MyForm" data-parsley-validate="" novalidate="" action="#">
                                            <div class="form-group" style="margin-right: -600px;">
                                                <label class="col-sm-2 control-label">Year:<font color=""></font> </label>
                                                <div class="col-sm-10" style="width: 30%;"><input type="text" class="form-control" style="width: 90%;" id="Year" placeholder="Year" required="required"></div>
                                            </div>
                                            <div class="form-group" style="margin-right: -600px;">
                                                <label class="col-sm-2 control-label">Year Description:<font color=""></font> </label>
                                                <div class="col-sm-10" style="width: 30%;">
                                                    <textarea type="text" class="form-control valid" id="YearDesc" placeholder="Year Description" style="width: 90% !important;" required="required"></textarea>
                                                </div>
                                            </div>
                                          
                                            <div class="form-group">
                                                <input type="hidden" id="ID" />
                                            </div>

                                            <div class="panel-footer text-center">
                                                <button type="button" class="btn btn-primary" id="btnSave" onclick="return Add();">Save</button>
                                                <button type="button" class="btn btn-primary" id="btnClear" onclick="clearTextBox();">Clear</button>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div style="width: 100%;">
                        <div class="panel panel-default">
                            <div class="card">
                                <div style="width:95%; margin:0 auto" class="tablecontainer">

                                    <input type="hidden" id="hdncount" />
                                    <input type="hidden" id="hdnrole" />
                                    <input type="hidden" id="hdndbfilePath" />


                                    <div class="table-responsive">
                                        @*/////////////////////// class="table-responsive"///////////////////////////*@
                                        <h2>
                                            Year List
                                        </h2>
                                        <table id="YearTable" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 93.667%;">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Year</th>
                                                    <th>Year Description</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        @*/////////////////////// class="table-responsive"///////////////////////////*@

    </div>
</body>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
    @Styles.Render("~/bundles/SweetAlertCss")

}
@section Scripts {

    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")

    @Scripts.Render("~/bundles/parsley")
    @Scripts.Render("~/bundles/SweetAlert")

}

<script type="text/javascript">
    $(document).ready(function () {

        SetUpGrid();

    });
</script>