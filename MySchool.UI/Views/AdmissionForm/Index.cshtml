                                            <option value="General">General</option>
                                            <option value="OBC">OBC</option>
                                            <option value="SC">SC</option>
                                            <option value="ST">ST</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <label>Address*</label>
                                        <input type="text" class="form-control" style="width:100%" id="txtAddress" placeholder="Address" required="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Mother tounge*</label>
                                        <input type="text" class="form-control" style="width:100%" id="txtAddress" placeholder="Mother Tounge" required="">
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Applied for class*</label>
                                        <select name="account" class="form-control m-b" style="width:50%" id="drpGender" required="">
