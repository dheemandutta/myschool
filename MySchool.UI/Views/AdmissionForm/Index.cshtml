<div class="col-md-9">
    <div class="container-md">
        <!-- Checkout Process-->
        <form action="" method="post" novalidate="novalidate">
            <div id="accordion" class="panel-group">


                <!-- Basic Information-->
                <div class="panel b">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#acc1collapse1">1. Basic Details</a>
                        </h4>
                    </div>
                    <div id="acc1collapse1" class="panel-collapse collapse">
                        <div id="collapse01" class="panel-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>First Name*</label>
                                        <input type="text" id="txtStudentFirstName" name="checkout-studentfirstname" required="" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Middle Name</label>
                                        <input type="text" id="txtStudentMiddleName" name="checkout-studentmiddlename" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Last Name*</label>
                                        <input type="text" id="txtStudentLastName" name="checkout-studentlastname" required="" class="form-control" />
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Date of Birth*</label>
                                        <div id="datetimepicker1" class="input-group date" style="width:70%">
                                            <input type="text" id="txtDateofBirth" class="form-control" required="">
