                                            <li role="presentation">
                                                <a href="#StudentResultDetails" aria-controls="StudentResultDetails" role="tab" data-toggle="tab">Student Result Details</a>
                                            </li>
                                        </ul>
                                        <!-- Tab panes-->
                                        <div class="tab-content">
                                            <div id="StudentParticulars" role="tabpanel" class="tab-pane active">
                                                <form class="form-horizontal" id="MyForm" data-parsley-validate="" novalidate="" action="#">

                                                    <div class="panel-heading">
                                                    </div>

                                                    <div class="form-group" style="margin-right: -600px;">
                                                        <label class="col-sm-2 control-label">Student:<font color=""></font> </label>
                                                        <div class="col-sm-10" style="width: 30%;">
                                                            @*<input type="text" class="form-control" style="width: 90%;" id="StudentID" placeholder="Student" required="required">*@
                                                            <label class="form-control" style="width: 90%;" id="StudentID"></label>
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style="margin-right: -600px;">
                                                        <label class="col-sm-2 control-label">First Name:<font color=""></font> </label>
                                                        <div class="col-sm-10" style="width: 30%;">
                                                            @*<input type="text" class="form-control" style="width: 90%;" id="FirstName" placeholder="First Name" required="required">*@
                                                            <label class="form-control" style="width: 90%;" id="FirstName"></label>
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style="margin-right: -600px;">
                                                        <label class="col-sm-2 control-label">Last Name:<font color=""></font> </label>
                                                        <div class="col-sm-10" style="width: 30%;">
                                                            @*<input type="text" class="form-control" style="width: 90%;" id="LastName" placeholder="Last Name" required="required">*@
                                                            <label class="form-control" style="width: 90%;" id="LastName"></label>
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style="margin-right: -600px;">
                                                        <label class="col-sm-2 control-label">D.O.B:<font color=""></font> </label>
                                                        <div class="col-sm-10" style="width: 30%;">
                                                            @*<input type="text" class="form-control" style="width: 90%;" id="DOB" placeholder="D.O.B" required="required">*@
                                                            <label class="form-control" style="width: 90%;" id="DOB"></label>
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style="margin-right: -600px;">
                                                        <label class="col-sm-2 control-label">Grade:<font color=""></font> </label>
                                                        <div class="col-sm-10" style="width: 30%;">
                                                            @*<input type="text" class="form-control" style="width: 90%;" id="GradeID" placeholder="Grade" required="required">*@
                                                            <label class="form-control" style="width: 90%;" id="GradeID"></label>
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style="margin-right: -600px;">
                                                        <label class="col-sm-2 control-label">Start Date:<font color=""></font> </label>
                                                        <div class="col-sm-10" style="width: 30%;">
                                                            @*<input type="text" class="form-control" style="width: 90%;" id="StartDate" placeholder="Start Date" required="required">*@
                                                            <label class="form-control" style="width: 90%;" id="StartDate"></label>
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style="margin-right: -600px;">
                                                        <label class="col-sm-2 control-label">End Date:<font color=""></font> </label>
                                                        <div class="col-sm-10" style="width: 30%;">
                                                            @*<input type="text" class="form-control" style="width: 90%;" id="EndDate" placeholder="End Date" required="required">*@
                                                            <label class="form-control" style="width: 90%;" id="EndDate"></label>
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style="margin-right: -600px;">
                                                        <label class="col-sm-2 control-label">Leaving Reason:<font color=""></font> </label>
                                                        <div class="col-sm-10" style="width: 30%;">
                                                            @*<input type="text" class="form-control" style="width: 90%;" id="LeavingReason" placeholder="Leaving Reason">*@
                                                            <label class="form-control" style="width: 90%;" id="LeavingReason"></label>
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style="margin-right: -600px;">
                                                        <label class="col-sm-2 control-label">Gender:<font color=""></font> </label>
                                                        <div class="col-sm-10" style="width: 30%;">
                                                            @*<input type="text" class="form-control" style="width: 90%;" id="Gender" placeholder="Gender" required="required">*@
                                                            <label class="form-control" style="width: 90%;" id="Gender"></label>
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style="margin-right: -600px;">
                                                        <label class="col-sm-2 control-label">Photo:<font color=""></font> </label>
                                                        <div class="col-sm-10" style="width: 30%;">
                                                            @*<input type="text" class="form-control" style="width: 90%;" id="Photo" placeholder="Photo">*@
                                                            <label class="form-control" style="width: 90%;" id="Photo"></label>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <input type="hidden" id="StudentParticularsID" />
                                                    </div>

                                                    <div class="panel-footer text-center">
                                                        <button type="button" class="btn btn-primary" id="btnSave" onclick="return AddStudentParticulars();">Save</button>
                                                        <button type="button" class="btn btn-primary" id="btnClear" onclick="clearTextBoxStudentParticulars();">Clear</button>
                                                    </div>
                                                </form>
                                            </div>
                                            <div id="StudentAttendent" role="tabpanel" class="tab-pane">
                                                Student Attendent
                                            </div>
                                            <div id="StudentContact" role="tabpanel" class="tab-pane">
                                                Student Contact
                                            </div>
                                            <div id="StudentHealth" role="tabpanel" class="tab-pane">
                                                Student Health
                                            </div>
                                            <div id="StudentResult" role="tabpanel" class="tab-pane">
                                                Student Result
                                            </div>
                                            <div id="StudentResultDetails" role="tabpanel" class="tab-pane">
                                                Student Result Details
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END panel-->
                        </div>
                    </div>
                </div>
            </div>
